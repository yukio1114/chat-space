.Main-chat
  .Main-chat__group-info
    .Main-chat__group-info--group-block
      .Main-chat__group-info--group-block--name
        = @group.name
        .Main-chat__group-info--group-block--member
          Member : 
          - @group.users.each do |user|
            = user.name
    .Main-chat__group-info--edit-block
      = link_to 'Edit', edit_group_path(@group), class:"Main-chat__group-info--edit-block--btn"

      
  .Main-chat__message-list
    = render @messages
    
  .Main-chat__message-form
    = form_with model: [@group, @message], html: {class: "new_message"}, local: true do |f|
      .input-box
        = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do
          = icon('far', 'image', class: 'input-box__image--icon')
          = f.file_field :image, class: 'input-box__image--file'
      = f.submit 'Send', class: 'submit-btn'

